@model Employee_Management.Models.Employee

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Employee</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row">

            <div class="border p-3">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="name" class="form-control border-0 shadow" />
                    <label asp-for="name" class="ms-2"></label>
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Department" class="form-control border-0 shadow" />
                    <label asp-for="Department" class="ms-2"></label>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="salary" class="form-control border-0 shadow" />
                    <label asp-for="salary" class="ms-2"></label>
                    <span asp-validation-for="salary" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Email" class="form-control border-0 shadow" />
                    <label asp-for="Email" class="ms-2"></label>
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <div class="form-floating py-2 col-12">
                        <input asp-for="Phone" class="form-control border-0 shadow" />
                        <label asp-for="Phone" class="ms-2"></label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="age" class="form-control border-0 shadow" />
                        <label asp-for="age" class="ms-2"></label>
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Address" class="form-control border-0 shadow" />
                        <label asp-for="Address" class="ms-2"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Education" class="form-control border-0 shadow" />
                        <label asp-for="Education" class="ms-2"></label>
                        <span asp-validation-for="Education" class="text-danger"></span>
                    </div>
                    <div class="row pt-2">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Edit</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                Back to List
                            </a>
                        </div>
                    </div>


                </div>
        </form>
    </div>
</div>



